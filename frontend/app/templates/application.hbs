{{#burger-menu
  translucentOverlay=translucentOverlay
  dismissOnClick=dismissOnClick
  dismissOnEsc=dismissOnEsc
  as |burger|
}}
  {{#burger.menu itemTagName="li" as |menu|}}
    <a {{action burger.state.actions.toggle}} class="close {{burger.state.position}} fa fa-times"></a>
    <h2 style="font-size:14px;text-align: left;">{{gravatar-image email="lugatex@yahoo.com" alt="Avatar" size="35"}}<span style="padding-left:10px;">Oleg G.Kapranov</span></h2>
    <ul>
      {{#menu.item}}
        {{#link-to 'admin-lte'}}<i class="fa fa-sitemap" aria-hidden="true"></i><span>AdminLTE</span>{{/link-to}}
      {{/menu.item}}

      {{#menu.item}}
        {{#link-to 'dashboard'}}<i class="fa fa-th-large" aria-hidden="true"></i><span>Dashboard</span>{{/link-to}}
      {{/menu.item}}

      {{#menu.item}}
        {{#link-to 'users'}}<i class="fa fa-user-circle-o" aria-hidden="true"></i><span>Users</span>{{/link-to}}
      {{/menu.item}}

      {{#menu.item}}
        {{#link-to 'contact'}}<i class="fa fa-edit" aria-hidden="true"></i><span>Contact</span>{{/link-to}}
      {{/menu.item}}

      {{#menu.item}}
        {{#link-to 'payment'}}<i class="fa fa-vcard-o" aria-hidden="true"></i><span>Payment</span>{{/link-to}}
      {{/menu.item}}

      {{#menu.item}}
        {{#link-to 'engine'}}<i class="fa fa-globe" aria-hidden="true"></i><span>Engine</span>{{/link-to}}
      {{/menu.item}}

      {{#menu.item}}
        {{#link-to 'flexbox'}}<i class="fa fa-globe" aria-hidden="true"></i><span>Flexbox</span>{{/link-to}}
      {{/menu.item}}

      {{#menu.item}}
        {{#link-to 'about'}}<i class="fa fa-book" aria-hidden="true"></i><span>About</span>{{/link-to}}
      {{/menu.item}}
    </ul>
    <img src="assets/images/tomster.png" class="tomster {{burger.state.position}}" width="175px" ondragstart="return false;"/>
  {{/burger.menu}}
  {{#burger.outlet}}
    <a class="hamburger {{burger.state.position}} {{if burger.state.open 'burger-hidden'}}" {{action burger.state.actions.toggle}}>
      <i class="fa fa-bars" aria-hidden="true"></i>
    </a>
    {{liquid-outlet}}
  {{/burger.outlet}}
{{/burger-menu}}
