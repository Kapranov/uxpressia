<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <h3>Detect if an Ember View or Component
        <br><h4>is in the viewport - Kittens widget component.</h4></h3>
      <button class="button alert" {{action "moar" on="click"}}>Moar kittens!</button>
      <h4><pre class="kitten-counter">Kittens rendered: {{kittens.length}}</pre></h4>
        <ul class="list-unstyled">
          {{#each kittens as |kitten|}}
            {{kitten-card kitten=kitten}}
          {{/each}}
        </ul>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>
