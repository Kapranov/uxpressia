<div class="menu-top clear-both text-center">
  <h1>Flexbox Page</h1>
</div>
<div class="container">
  <div class="col-xs-12 animations text-center">
    <div class="Application">
      <header class="Application__header">
        <div class="padding">
          <p>I am the header</p>
        </div>
      </header>

      <div class="Application__main">
        <div class="Application__left-panel">
          <div class="padding">
            Left panel
          </div>
        </div>
        <div class="Application__center-panel">
          <div class="Application__center-panel-header">
            <div class="padding">
              Panel header
            </div>
          </div>
          <div class="Application__center-panel-body">
            <div class="padding">
              {{#each data as |item|}}
                <li>{{item}}</li>
              {{/each}}
            </div>
          </div>
          <div class="Application__center-panel-footer">
            <div class="padding">
              Panel footer
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="inspiration text-center">
  <p>
    Inspired by <a href="https://github.com/codrops/SidebarTransitions">Sidebar Transitions</a> by Codrops
    {{my-helper "Created by" "Oleg G.Kapranov"}}
  </p>
</div>
